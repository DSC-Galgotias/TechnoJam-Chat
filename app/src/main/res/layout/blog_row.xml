<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            >

            <ImageView android:layout_height="50dp"
                android:layout_width="50dp"
                android:paddingBottom="5dp"
                android:layout_weight="0.1"
                android:id="@+id/user"
                android:src="@drawable/user"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:layout_weight="8">
                <TextView
                    android:id="@+id/post_uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    />
                <TextView
                    android:id="@+id/post_date"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_gravity="end"
                android:id="@+id/delete_icon"/>


        </LinearLayout>
        <ImageView android:layout_height="200dp"
            android:layout_width="match_parent"
            android:id="@+id/post_image"
            android:src="@drawable/add_btn"
            />

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_title"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Post Title Goes Here"
            />

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_desc"
            android:padding="10dp"
            android:text="Post Description goes here"
            android:inputType="textMultiLine"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/liketext"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Like: "
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                />

            <ImageButton
                android:id="@+id/likeimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/liketext"
                android:background="@android:color/white"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_action_like" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>